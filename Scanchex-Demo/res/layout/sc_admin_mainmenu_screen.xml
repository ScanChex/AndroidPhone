<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/adminMenuCOntainer"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logoTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/scan_chexs_logo" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:scaleType="fitXY"
            android:src="@drawable/photo_not_available" />

        <TextView
            android:id="@+id/mainmenu_employeename_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Employer name"
            android:textColor="@color/text_menus"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/white" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:onClick="onUploadImageClick"
            android:text="SCAN CODE AND LOCK LOCATION"
            android:textColor="@color/text_menus"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:onClick="onLockLocationClick"
            android:text="TAKE NEW PICTURE"
            android:textColor="@color/text_menus"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:text="REGISTER EMPLOYEE DEVICE"
            android:textColor="@color/text_menus"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:onClick="onClickCheckin"
            android:text="CHECK-IN / CHECK-OUT"
            android:textColor="@color/text_menus"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white" />

        <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_button"
            android:onClick="onLogoutClick"
            android:text="Logout"
            android:textColor="@color/text_menus"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>
