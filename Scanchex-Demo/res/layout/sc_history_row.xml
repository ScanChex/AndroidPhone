<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tickets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:text="Text1"
        android:textColor="@color/blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Text2"
        android:textColor="@color/blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Text3"
        android:textColor="@color/blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Text4"
        android:textColor="@color/blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:button="@drawable/ticket_status_unselect" />

    <!-- ************************************* -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/notes_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/notes_image" />

            <TextView
                android:id="@+id/textViewNotes"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_image" />

            <TextView
                android:id="@+id/textViewImage"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/audio_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/voice_image" />

            <TextView
                android:id="@+id/textViewAudio"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/video_image" />

            <TextView
                android:id="@+id/textViewVideo"
                style="@style/textViewCounter" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>