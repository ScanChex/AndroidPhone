<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SCLoginScreen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/view1"
        android:layout_below="@+id/logo"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_companyid_edittext"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_edittext"
            android:capitalize="characters"
            android:ems="10"
            android:gravity="bottom|left"
            android:hint="Company Id"
            android:inputType="text|textCapCharacters"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:textColor="@color/editTextColor"
            android:textCursorDrawable="@drawable/cursor" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/login_username_edittext"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_edittext"
            android:ems="10"
            android:gravity="bottom|left"
            android:hint="User name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:textColor="@color/editTextColor"
            android:textCursorDrawable="@drawable/cursor" >
        </EditText>

        <EditText
            android:id="@+id/login_password_edittext"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_edittext"
            android:ems="10"
            android:gravity="bottom|left"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:textColor="@color/editTextColor"
            android:textCursorDrawable="@drawable/cursor" >
        </EditText>

        <Button
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="#999999"
            android:onClick="onForgotPassClick"
            android:text="FORGOT PASSWORD"
            android:textSize="12sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_corner_button"
            android:onClick="onLoginClick"
            android:text="LOGIN"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/privacy_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/privacy_layout"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/copyright_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="left|center"
            android:onClick="onAboutClick"
            android:text="About"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="onContactUsClick"
            android:text="Contact Us"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button4"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="onTermsClick"
            android:text="Terms of Use"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button3"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity=""
            android:onClick="onPrivacyClick"
            android:text="Privacy"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="Â©ScanChex, Inc"
        android:textColor="@color/text_menus"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="70dp"
        android:paddingRight="0dp"
        android:paddingTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/scan_chexs_logo" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/copyright_text"
         android:layout_alignBottom="@+id/copyright_text"
         android:layout_alignParentRight="true"
         android:text="@string/version"
         android:textColor="@color/text_menus"
         android:textSize="10sp" />

</RelativeLayout>