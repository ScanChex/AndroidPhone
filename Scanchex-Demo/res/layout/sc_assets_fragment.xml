<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/asset_image_id"
            android:layout_width="250dp"
            android:layout_height="192dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:scaleType="fitXY"
            android:src="@drawable/scan_chexs_logo" />

        <View
            android:id="@+id/lineId"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/asset_image_id"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/asset_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineId"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/asset_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="right"
                    android:text="ASSET ID: "
                    android:textColor="@color/text_menus"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asset_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="US-6425790-0001-0000-0001"
                    android:textColor="@color/text_menus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/des_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.8"
                    android:gravity="right"
                    android:text="DESCRIPTION: "
                    android:textColor="@color/text_menus"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/des_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Standby Generator"
                    android:textColor="@color/text_menus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/add_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.8"
                    android:gravity="right"
                    android:text="ADDRESS: "
                    android:textColor="@color/text_menus"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/add_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="2500 NW Ave\nMiami, Florida 33122"
                    android:textColor="@color/text_menus" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asset_info_layout"
            android:layout_marginTop="15dp"
            android:background="#888888"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.30"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time Started"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/timeStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.40"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time Completed"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/timeCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1:00 AM"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.30"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Time"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/totalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 hr"
                    android:textColor="#ffff00"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/timeLayout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/listview_header"
            android:gravity="center"
            android:text="TASKS TO BE PERFORMED"
            android:textColor="#0404fe"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/title"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/checkList"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@android:color/transparent"
                android:divider="@android:color/white"
                android:dividerHeight="1dp" >
            </ListView>

            <TextView
                android:id="@+id/textViewEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Result"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:visibility="gone" />
        </LinearLayout>
        
     

    <LinearLayout
            android:id="@+id/scansuspendlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/scan_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="Scan"
                android:textStyle="bold" />

            <Button
                android:id="@+id/suspend_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="Suspend"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/close_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="Close"
                android:textStyle="bold" />

        </LinearLayout>
          
    </RelativeLayout>

</ScrollView>