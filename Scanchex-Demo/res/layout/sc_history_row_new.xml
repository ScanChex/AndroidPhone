<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tickets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical|left"
        android:layout_weight="1"
        android:text="Text1"
        android:textColor="@color/blue_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Text2" 
        android:gravity="center_vertical|left"
        android:textSize="8sp"
        android:textColor="@color/blue_dark"/>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight=".70"
        android:clickable="false"
        android:layout_marginLeft="4dp"
        android:background="@android:color/transparent"
        />

    <!-- ************************************* -->

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/notes_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/notes_image" />

            <TextView
                android:id="@+id/textViewNotes"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_image" />

            <TextView
                android:id="@+id/textViewImage"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/audio_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/voice_image" />

            <TextView
                android:id="@+id/textViewAudio"
                style="@style/textViewCounter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/video_image" />

            <TextView
                android:id="@+id/textViewVideo"
                style="@style/textViewCounter" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>