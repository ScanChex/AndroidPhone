<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tickets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#00ff00" >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:src="@drawable/app_icon"
        android:scaleType="fitXY"
           
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/ticket_status_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/image_view"
     
        android:layout_marginTop="10dp"
         />
<!-- android:src="@drawable/exclamation_ticket" -->
    <ImageView
        android:id="@+id/map_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:onClick="onTicketMapClick"
        android:src="@drawable/map_magnify" />

    <ImageView
        android:id="@+id/ticket_detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text9"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:onClick="onTicketDetailsClick"
        android:src="@drawable/ticket_detailsview_icon" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_view"
        android:text="Client 1"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:text="2500 NW 79 Ave"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="Miami, Florida"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1"
        android:layout_below="@+id/text4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="(305) 123.4567"
        android:textColor="@android:color/black"
            android:onClick="onPhoneClick"
            android:clickable="true"
        android:textSize="12sp" />

    <!-- ************** -->

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/map_icon"
        android:text="13-100-000217"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text5"
        android:layout_below="@+id/text5"
        android:layout_marginTop="2dp"
        android:text="US-6425790-0001-0000-0001"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text5"
        android:layout_below="@+id/text6"
        android:layout_marginTop="10dp"
        android:text="Standby Generator"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text5"
        android:layout_below="@+id/text7"
        android:layout_marginTop="5dp"
        android:text="June 09, 2013"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text5"
        android:layout_below="@+id/text8"
        android:layout_marginTop="2dp"
        android:text="02:00 AM"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>